generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Produto {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  nome             String
  preco            Float
  estoque          Int
  descricao        String
  data_criacao     DateTime? @default(now())
  data_atualizacao DateTime? @updatedAt

  @@map("produto")
}
